<p id="notice"><%= notice %></p>

<%= link_to 'New Team Member', new_team_path, class: 'btn btn-outline-dark btn-sm mb-4' %>

<div class="table-responsive-md">
  <table class="table table-bordered table-hover">
    <thead>
      <tr class="d-flex">
        <th class="col-2">#/Full name</th>
        <th class="col-3">Bio</th>
        <th class="col-1">Role</th>
        <th class="col-2">Linkedin url</th>
        <th class="col-2">Twitter handle</th>
        <th class="col-1">Image</th>
        <th colspan="2" class="col-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <% position_text = team.order_position ? "##{team.order_position} - " : '' %>
        <tr class="d-flex">
          <td class="col-2 overflow-hidden"><%= "#{position_text}#{team.first_name} #{team.last_name}" %></td>
          <td class="col-3 overflow-hidden"><%= team.bio %></td>
          <td class="col-1 overflow-hidden"><%= team.role %></td>
          <td class="col-2 overflow-hidden"><%= team.linkedin_url %></td>
          <td class="col-2 overflow-hidden"><%= team.twitter_handle %></td>
          <td class="col-1 overflow-hidden">
            <% if team.avatar.attached? %>
              <%= image_tag team.avatar.variant(resize_to_limit: [100, 100]) %>
            <% end %>
          </td>

          <td class="col-1">
            <%= link_to 'Edit', edit_team_path(team) %>
            <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
